{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug PostgreSQL Primary (Docker)",
      "type": "cppdbg",
      "request": "attach",
      "program": "/usr/local/pgsql/bin/postgres",
      "processId": "${command:pickProcess}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "sourceFileMap": {
        "/usr/src/postgresql": "${workspaceFolder}/postgresql"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "pipeTransport": {
        "pipeCwd": "${workspaceFolder}",
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "postgres-primary", "gdb"],
        "debuggerPath": "/usr/bin/gdb"
      }
    },
    {
      "name": "Debug PostgreSQL Replica (Docker)",
      "type": "cppdbg",
      "request": "attach",
      "program": "/usr/local/pgsql/bin/postgres",
      "processId": "${command:pickProcess}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "sourceFileMap": {
        "/usr/src/postgresql": "${workspaceFolder}/postgresql"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "pipeTransport": {
        "pipeCwd": "${workspaceFolder}",
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "postgres-replica", "gdb"],
        "debuggerPath": "/usr/bin/gdb"
      }
    },
    {
      "name": "Debug PostgreSQL Backend Process",
      "type": "cppdbg",
      "request": "attach",
      "program": "/usr/local/pgsql/bin/postgres",
      "processId": "${input:backendPID}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "sourceFileMap": {
        "/usr/src/postgresql": "${workspaceFolder}/postgresql"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "pipeTransport": {
        "pipeCwd": "${workspaceFolder}",
        "pipeProgram": "docker",
        "pipeArgs": ["exec", "-i", "postgres-primary", "gdb"],
        "debuggerPath": "/usr/bin/gdb"
      }
    }
  ],
  "inputs": [
    {
      "id": "backendPID",
      "type": "promptString",
      "description": "Enter the PostgreSQL backend process ID to debug",
      "default": ""
    }
  ]
}
